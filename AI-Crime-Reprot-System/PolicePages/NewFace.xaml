<local:BasePageP x:Class="AIFaceDrawing.PolicePages.NewFace"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AIFaceDrawing"
      mc:Ignorable="d" 
      Height="470" Width="800"
      Title="NewFace">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="370"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Width="800" Height="50" HorizontalAlignment="Center">Submit New Resident Information</Label>
        <Button Grid.Row="1" Width="100" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Upload_Click">Upload Photo</Button>
        <Image Grid.Row="1" Name="imageS" Width="500" Height="250" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,0,0,0"></Image>
        <TextBox Grid.Row="1" Name="imagelist" Width="700" Height="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        <Button Grid.Row="2" Width="50" Height="30" HorizontalAlignment="Right" Margin="0,0,100,0" Click="Ensure_Click">Submit</Button>
    </Grid>
</local:BasePageP>
